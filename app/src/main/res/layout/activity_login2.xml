<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/enter"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="110dp"
    android:text="Login"
    android:textColor="#3F51B5"
    android:textSize="48sp" />

  <EditText
    android:id="@+id/user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageView"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="68dp"
    android:layout_marginLeft="68dp"
    android:layout_marginTop="170dp"
    android:layout_marginEnd="28dp"
    android:layout_marginRight="28dp"
    android:focusable="true"
    android:hint="Enter Name"
    android:textColorHighlight="#ff7eff15"
    android:textColorHint="#3F51B5" />

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="65dp"

    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:src="@drawable/ic_launcher_foreground" />

  <EditText
    android:id="@+id/password11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/user"
    android:layout_alignEnd="@+id/user"
    android:layout_alignRight="@+id/user"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="70dp"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="56dp"
    android:layout_marginEnd="-6dp"
    android:layout_marginRight="-6dp"
    android:ems="10"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColorHint="#3F51B5" />

  <Button
    android:id="@+id/enter11"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/password11"
    android:layout_alignStart="@+id/password11"
    android:layout_alignEnd="@+id/password11"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="26dp"
    android:layout_marginTop="29dp"
    android:layout_marginEnd="76dp"
    android:layout_marginRight="-135dp"
    android:layout_marginBottom="205dp"
    android:layout_toLeftOf="@+id/textview"
    android:background="#3F51B5"
    android:backgroundTint="#3F51B5"
    android:text="login" />

  <Button
    android:id="@+id/home1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="28dp"
    android:layout_marginLeft="28dp"
    android:layout_marginBottom="36dp"
    android:layout_toEndOf="@+id/textview"
    android:layout_toRightOf="@+id/textview"
    android:background="@drawable/ic_launcher_foreground"
    android:scaleX=".8"
    android:scaleY=".8"
    android:text="Home " />

</RelativeLayout>


